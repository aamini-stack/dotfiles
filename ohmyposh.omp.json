{
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\ueb99 {{ .UserName }} on",
          "foreground": "#45F1C2",
          "type": "session",
          "style": "plain"
        },
        {
          "options": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "template": " \uf07b {{ .Path }} ",
          "foreground": "#0CA0D8",
          "type": "path",
          "style": "plain"
        },
        {
          "options": {
            "fetch_upstream_icon": true
          },
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "#14A5AE",
          "powerline_symbol": "\ue0b0",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\ue3bf ",
          "foreground": "#cd5e42",
          "type": "root",
          "style": "plain"
        },
        {
          "template": "# ",
          "foreground": "#CD4277",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#50fa7b",
    "foreground_templates": [
      { "template": "{{ ne .Code 0 }}", "foreground": "#ff5555" }
    ],
    "template": "{{ if eq .Code 0 }}\uf00c {{ else }}\uf00d {{ end }}{{ .Shell }} {{ .PWD }}> ",
    "newline": true
  }
}
