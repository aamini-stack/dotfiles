layout {
    // Status bar at top with datetime using zjstatus plugin
    pane size=1 borderless=true {
        plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
            format_left  "{mode} {tabs}"
            format_right "{datetime}"
            format_space ""

            mode_normal  "#[bg=blue,fg=black,bold] NORMAL "
            mode_locked  "#[bg=red,fg=white,bold] LOCKED "
            mode_pane    "#[bg=green,fg=black,bold] PANE "
            mode_tab     "#[bg=yellow,fg=black,bold] TAB "
            mode_resize  "#[bg=magenta,fg=black,bold] RESIZE "
            mode_scroll  "#[bg=cyan,fg=black,bold] SCROLL "
            mode_session "#[bg=yellow,fg=black,bold] SESSION "
            mode_tmux    "#[bg=orange,fg=black,bold] TMUX "

            tab_normal   "#[fg=white] {name} "
            tab_active   "#[fg=blue,bold] {name} "

            datetime          "#[fg=white,bold] {format} "
            datetime_format   "%H:%M %b %d"
            datetime_timezone "Local"
        }
    }

    // Main content area
    pane

    // Tab bar at bottom (optional - zjstatus already shows tabs)
    // pane size=1 borderless=true {
    //     plugin location="tab-bar"
    // }
}
